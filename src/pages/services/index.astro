---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Zap, Users, Cog, Lightbulb } from 'lucide-react';

const services = [
  {
    icon: Zap,
    title: 'CoCoTB Training',
    description: 'Comprehensive CoCoTB system training from basics to advanced',
    features: [
      'Basic concepts and architecture',
      'Advanced features and best practices',
      'Practical project exercises',
      'One-on-one Q&A guidance'
    ],
    pricing: 'Contact us for quote',
    contact: 'opensource@chipverif.com'
  },
  {
    icon: Users,
    title: 'Technical Support',
    description: 'Professional technical support services',
    features: [
      'Troubleshooting and debugging',
      'Performance optimization recommendations',
      'Code review',
      'Technical consultation'
    ],
    pricing: 'Pricing based on support level',
    contact: 'opensource@chipverif.com'
  },
  {
    icon: Cog,
    title: 'Custom VIP',
    description: 'Custom verification IPs based on requirements',
    features: [
      'Protocol custom development',
      'Functionality extensions',
      'Performance optimization',
      'Documentation and testing'
    ],
    pricing: 'Pricing by project',
    contact: 'opensource@chipverif.com'
  },
  {
    icon: Lightbulb,
    title: 'Consulting Services',
    description: 'Verification strategy and architecture design',
    features: [
      'Verification planning',
      'Architecture design review',
      'Process optimization recommendations',
      'Team training planning'
    ],
    pricing: 'Pricing by duration or project',
    contact: 'opensource@chipverif.com'
  }
];
---

<BaseLayout title="Services">
  <div class="pt-12 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Our Services
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Comprehensive CoCoTB ecosystem services, from training to custom development
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map((service, index) => (
          <div class={`bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-gray-200 dark:border-gray-700 ${index === 0 ? 'md:col-span-2 md:grid md:grid-cols-3 bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20' : ''}`}>
            <div class={index === 0 ? 'md:col-span-2 md:pr-8' : ''}>
              <div class={`w-14 h-14 rounded-xl flex items-center justify-center mb-5 ${index === 0 ? 'bg-gradient-to-br from-indigo-600 to-purple-600' : 'bg-indigo-100 dark:bg-indigo-900/30'}`}>
                <service.icon className={`w-7 h-7 ${index === 0 ? 'text-white' : 'text-indigo-600 dark:text-indigo-400'}`} />
              </div>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
                {service.title}
                {index === 0 && <span class="ml-2 px-2 py-1 text-xs font-semibold bg-indigo-600 text-white rounded-full">Popular</span>}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-6">
                {service.description}
              </p>

              <ul class="space-y-3 mb-8">
                {service.features.map((feature) => (
                  <li class="flex items-center text-gray-600 dark:text-gray-300">
                    <span class={`w-2 h-2 rounded-full mr-3 ${index === 0 ? 'bg-indigo-600 dark:bg-indigo-400' : 'bg-indigo-600 dark:bg-indigo-400'}`}></span>
                    {feature}
                  </li>
                ))}
              </ul>

              <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-6">
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">Pricing</p>
                <p class="font-semibold text-gray-900 dark:text-white">
                  {service.pricing}
                </p>
              </div>

              <a
                href={`mailto:${service.contact}`}
                class="inline-flex items-center px-6 py-3 text-base font-semibold text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-all w-full justify-center shadow-lg hover:shadow-xl"
              >
                Contact Us
              </a>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-16 bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden border border-gray-200 dark:border-gray-700">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-4">
          <h3 class="text-xl font-bold text-white">Service Comparison</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 dark:bg-gray-700">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Service Type</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Key Features</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Pricing Model</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900 dark:text-white">Response Time</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
              <tr class="bg-indigo-50/50 dark:bg-indigo-900/10">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">CoCoTB Training</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">System training, practical exercises, one-on-one guidance</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">Contact for quote</td>
                <td class="px-6 py-4"><span class="px-2 py-1 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full">Within 24 hours</span></td>
              </tr>
              <tr>
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">Technical Support</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">Troubleshooting, performance optimization, code review</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">Pricing by support level</td>
                <td class="px-6 py-4"><span class="px-2 py-1 text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full">Within 48 hours</span></td>
              </tr>
              <tr class="bg-indigo-50/50 dark:bg-indigo-900/10">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">Custom VIP</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">Protocol customization, functionality extensions, performance optimization</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">Pricing by project</td>
                <td class="px-6 py-4"><span class="px-2 py-1 text-xs font-medium bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 rounded-full">Project-based</span></td>
              </tr>
              <tr>
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">Consulting Services</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">Verification planning, architecture design, process optimization</td>
                <td class="px-6 py-4 text-gray-600 dark:text-gray-300">Pricing by duration/project</td>
                <td class="px-6 py-4"><span class="px-2 py-1 text-xs font-medium bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 rounded-full">Within 1 week</span></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-16 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-8 text-center text-white shadow-xl">
        <h3 class="text-2xl font-bold mb-4">
          Need customized solutions?
        </h3>
        <p class="text-indigo-100 mb-6 max-w-2xl mx-auto">
          We can provide personalized services and solutions based on your specific needs
        </p>
        <a
          href="/contact"
          class="inline-flex items-center px-8 py-3 text-base font-semibold bg-white text-indigo-600 rounded-lg hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl"
        >
          Contact Us Now
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
