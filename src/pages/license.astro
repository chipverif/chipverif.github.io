---
import BaseLayout from '../layouts/BaseLayout.astro';
import LicenseSection from '../components/LicenseSection.astro';
---

<BaseLayout title="Apply for Free VIP License">
  <div class="pt-12 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Apply for Free VIP License
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          We provide free VIP licenses for individual developers, academic research, and small teams.
          Fill out the form, and our team will review and respond within 1-2 business days.
        </p>
      </div>

      <LicenseSection />
    </div>
  </div>
</BaseLayout>
