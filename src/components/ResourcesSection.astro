---
import { Book, FileText, Video, ArrowRight, Zap } from 'lucide-react';

const resources = [
  {
    icon: Book,
    title: 'Documentation Center',
    description: 'Complete API documentation and user guides',
    link: '/docs'
  },
  {
    icon: FileText,
    title: 'Best Practices',
    description: 'Verification strategies and design patterns',
    link: '/docs/coming-soon'
  },
  {
    icon: Video,
    title: 'Video Tutorials',
    description: 'Step-by-step tutorials and practical examples',
    link: '/docs/coming-soon'
  },
];
---

<section class="py-24 bg-white dark:bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        VIP Resource Center
      </h2>
      <p class="text-gray-600 dark:text-gray-300">
        Learning resources, documentation, and tutorials for quick start
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {resources.map((resource) => (
        <a
          href={resource.link}
          class="bg-gray-50 dark:bg-gray-700 rounded-xl p-6 hover:shadow-lg transition-all border border-gray-200 dark:border-gray-600 group"
        >
          <resource.icon className="w-12 h-12 text-indigo-600 dark:text-indigo-400 mb-4" />
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
            {resource.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {resource.description}
          </p>
          <span class="inline-flex items-center text-indigo-600 dark:text-indigo-400 font-medium group-hover:translate-x-2 transition-transform">
            Access Now
            <ArrowRight className="w-4 h-4 ml-2" />
          </span>
        </a>
      ))}
    </div>

    <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/30 dark:to-purple-900/30 rounded-2xl p-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            Need professional technical support?
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            We provide CoCoTB training, technical support, and custom VIP services
          </p>
        </div>
        <a
          href="/services"
          class="inline-flex items-center px-6 py-3 text-base font-semibold text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-all"
        >
          <Zap className="w-5 h-5 mr-2" />
          Learn About Our Services
        </a>
      </div>
    </div>
  </div>
</section>
