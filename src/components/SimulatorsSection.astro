---
import { ExternalLink } from 'lucide-react';

const simulators = [
  {
    name: 'Verilator',
    description: 'High-performance open-source simulator supporting SystemVerilog and Verilog',
    features: ['Fast Simulation', 'C++ Integration', 'Cross-platform'],
    link: 'https://verilator.org',
    icon: '‚ö°'
  },
  {
    name: 'Icarus Verilog',
    description: 'Classic Verilog HDL simulator widely used in academia and research',
    features: ['Complete Verilog Support', 'Open Source', 'Active Community'],
    link: 'https://iverilog.icarus.com',
    icon: 'üî¨'
  },
  {
    name: 'Cocotb Integration',
    description: 'Seamless integration with CoCoTB for Python-based verification',
    features: ['Python Driven', 'Flexible Testing', 'Easy Debugging'],
    link: '/docs/simulator-integration',
    icon: 'üêç'
  },
];
---

<section class="py-24 bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Open-Source Simulator Ecosystem
      </h2>
      <p class="text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Seamlessly integrated with mainstream open-source simulators like Verilator and Icarus Verilog to reduce verification costs
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {simulators.map((sim) => (
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all border border-gray-200 dark:border-gray-700">
          <div class="text-4xl mb-4">{sim.icon}</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
            {sim.name}
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {sim.description}
          </p>
          <ul class="space-y-2 mb-6">
            {sim.features.map((feature) => (
              <li class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                <span class="w-1.5 h-1.5 rounded-full bg-indigo-600 dark:bg-indigo-400 mr-2"></span>
                {feature}
              </li>
            ))}
          </ul>
          <a
            href={sim.link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-indigo-600 dark:text-indigo-400 font-medium hover:underline"
          >
            Learn More
            <ExternalLink className="w-4 h-4 ml-2" />
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
